<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RouteTrackingInfoLabel">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:alpha">0.9</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RouteTrackingInfoValue">
        <item name="android:lines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#222</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="RouteTrackingUnitLabel">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#d32024</item>
        <item name="android:alpha">0.9</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RouteTrackingControlButton">
        <item name="elevation">4dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">@dimen/common_page_vertical_padding</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="PhoneCodeEntryText">
        <item name="android:textSize">@dimen/phone_box_item_text_size</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TransparentDialog" parent="AppDialogTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="RouteTrackingControlButtonShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RouteTrackingSelectedActivityTypeText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SignInPhoneText">
        <item name="android:textSize">@dimen/phone_box_item_text_size</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="ProfileSectionLabel">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/greyText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CommonEditText">
        <item name="android:drawablePadding">15dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#99222222</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/common_edittext_background</item>
    </style>

    <style name="UserProfileField">
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextFieldLabel">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#e68d8d8d</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextFieldValue">
        <item name="android:textColor">@color/darkText</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>