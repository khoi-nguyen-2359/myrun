<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RouteTrackingInfoLabel">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:alpha">0.9</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RouteTrackingInfoValue">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#222</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="RouteTrackingUnitLabel">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#d32024</item>
        <item name="android:alpha">0.9</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RouteTrackingControlButton">
        <item name="android:layout_width">@dimen/route_tracking_control_button_size</item>
        <item name="android:layout_height">@dimen/route_tracking_control_button_size</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="TransparentDialog" parent="AppDialogTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>