<resources>
    <style name="RouteTrackingInfoLabel">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:alpha">0.9</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RouteTrackingInfoValue">
        <item name="android:lines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#222</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="RouteTrackingUnitLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#d32024</item>
        <item name="android:alpha">0.9</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PhoneCodeEntryText">
        <item name="android:textSize">@dimen/phone_box_item_text_size</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TransparentDialog" parent="AppDialogTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="TransparentAppCompat" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="RouteTrackingControlButtonShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RouteTrackingSelectedActivityTypeText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SignInPhoneText">
        <item name="android:textSize">@dimen/phone_box_item_text_size</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="UserProfileSectionLabel" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/greyText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CommonEditText">
        <item name="android:drawablePadding">15dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#99222222</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/common_edittext_background</item>
    </style>

    <style name="UserProfileField">
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextFieldLabel" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#e68d8d8d</item>
    </style>

    <style name="TextFieldValue" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/darkText</item>
    </style>

</resources>
