<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/item_my_workout_margin_vertical"
    android:layout_marginBottom="@dimen/item_my_workout_margin_vertical"
    android:background="@color/item_my_workout_background"
    android:elevation="@dimen/item_my_workout_elevation">

    <ImageView
        app:layout_constraintDimensionRatio="@string/route_tracking_captured_image_ratio"
        android:id="@+id/running_workout_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent" />

    <akio.apps.myrun.feature.routetracking.view.RouteTrackingStatsView
        android:id="@+id/running_workout_stats_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:activityTypeIndex="running"
        app:layout_constraintTop_toBottomOf="@id/running_workout_image" />

</androidx.constraintlayout.widget.ConstraintLayout>