<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/running_workout_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/workout_image_height"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent" />

    <akio.apps.myrun.feature.routetracking.impl.RouteTrackingStatsView
        android:id="@+id/running_workout_stats_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/running_workout_image" />

</androidx.constraintlayout.widget.ConstraintLayout>