<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ProgressBar
        android:id="@+id/loading_progress_bar"
        android:layout_width="@dimen/user_timeline_loading_progress_size"
        android:layout_height="@dimen/user_timeline_loading_progress_size"
        android:layout_gravity="center"
        android:indeterminate="true" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/error_text_view"
        android:padding="@dimen/common_item_vertical_padding"
        android:gravity="center"
        android:textColor="@color/common_error_text"
        android:text="@string/user_timeline_error_loading_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</FrameLayout>
