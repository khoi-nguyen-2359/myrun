<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/item_user_timeline_margin_vertical"
    android:layout_marginBottom="@dimen/item_user_timeline_margin_vertical"
    android:background="@color/item_activity_background"
    android:elevation="@dimen/item_user_timeline_elevation"
    android:paddingTop="@dimen/common_item_vertical_padding">

    <ImageView
        tools:background="@color/colorAccent"
        android:id="@+id/user_avatar_image_view"
        android:layout_width="@dimen/user_timeline_avatar_size"
        android:layout_height="@dimen/user_timeline_avatar_size"
        android:layout_marginStart="@dimen/common_item_horizontal_padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="@dimen/common_item_horizontal_padding"
        android:lines="1"
        android:textColor="@color/darkText"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/user_avatar_image_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="User" />

    <TextView
        android:id="@+id/activity_time_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/common_item_horizontal_padding"
        android:textColor="#000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/user_name_text_view"
        app:layout_constraintTop_toBottomOf="@id/user_name_text_view"
        tools:text="Today at 6:30am" />

    <TextView
        android:id="@+id/activity_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_item_horizontal_padding"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="@dimen/common_item_horizontal_padding"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/activity_time_text_view"
        tools:text="Morning Run" />

    <ImageView
        android:id="@+id/running_activity_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/common_item_section_vertical_spacing"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="@string/route_tracking_captured_image_ratio"
        app:layout_constraintTop_toBottomOf="@id/activity_title_text_view" />

    <akio.apps.myrun.feature.routetracking.view.RouteTrackingStatsView
        android:id="@+id/activity_stats_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:activityTypeIndex="running"
        app:layout_constraintTop_toBottomOf="@id/running_activity_image" />

</androidx.constraintlayout.widget.ConstraintLayout>