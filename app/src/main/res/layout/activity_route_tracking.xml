<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <fragment
        android:id="@+id/tracking_map_view"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/semi_transparent_backdrop_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#6fff"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/information_views_barrier" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/information_views_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="tracking_stats_view,activity_settings_view" />

    <akio.apps.myrun.feature.routetracking.view.ActivitySettingsView
        android:id="@+id/activity_settings_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="4dp"
        app:layout_constraintBottom_toTopOf="@id/control_buttons_barrier" />

    <akio.apps.myrun.feature.routetracking.view.RouteTrackingStatsView
        android:id="@+id/tracking_stats_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/control_buttons_barrier" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/control_buttons_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="record_button,resume_button,pause_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/record_button"
        style="@style/RouteTrackingControlButton"
        android:text="@string/action_start"
        app:backgroundTint="@color/route_tracking_start_button_background_tint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/pause_button"
        style="@style/RouteTrackingControlButton"
        android:text="@string/action_pause"
        android:visibility="gone"
        app:backgroundTint="@color/route_tracking_pause_button_background_tint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/resume_button"
        style="@style/RouteTrackingControlButton"
        android:text="@string/action_resume"
        android:visibility="gone"
        app:backgroundTint="@color/route_tracking_resume_button_background_tint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/stop_button"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/stop_button"
        style="@style/RouteTrackingControlButton"
        android:text="@string/action_stop"
        android:visibility="gone"
        app:backgroundTint="@color/route_tracking_pause_button_background_tint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/resume_button" />

</androidx.constraintlayout.widget.ConstraintLayout>
