<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="akio.apps.myrun">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".MyRunApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity android:name=".feature.routetracking.impl.RouteTrackingActivity"/>
        <activity android:name=".feature.myworkout.impl.MyWorkoutActivity"/>
        <activity android:name=".feature.splash.impl.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_sdk_key" />

        <service android:name=".feature.routetracking.impl.RouteTrackingService"
            android:foregroundServiceType="location"
            android:enabled="true"
            android:exported="false" />

    </application>

</manifest>